{% extends "form.njk" %}

{% set appClasses = "app--minimalui" %}
{% set me = publication.me | friendlyUrl %}

{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block form %}
  {{ heading({
    text: title
  }) | indent(2) }}

  {{ radios({
    fieldset: {
      legend: __("session.publication.label")
    },
    name: "publication",
    items: [{
      label: me,
      value: publication.me,
      checked: true
    }, {
      label: __("session.publication.external"),
      value: "external",
      conditional: input({
        label: __("session.external.label"),
        name: "external",
        value: external
      })
    }]
  }) | indent(2) }}

  {{ button({
    text: __("session.login.submit"),
    classes: "button--block"
  }) | indent(2) }}
{% endblock %}